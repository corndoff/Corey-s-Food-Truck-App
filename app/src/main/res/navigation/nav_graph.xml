<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.learningandroid.fragments.StartFragment"
        android:label="StartFragment" >
        <action
            android:id="@+id/action_startFragment_to_orderFragment"
            app:destination="@id/orderFragment" />
    </fragment>
    <fragment
        android:id="@+id/orderFragment"
        android:name="com.example.learningandroid.fragments.OrderFragment"
        android:label="OrderFragment" >
        <action
            android:id="@+id/action_orderFragment_to_hamburgersFragment"
            app:destination="@id/hamburgersFragment" />
        <action
            android:id="@+id/action_orderFragment_to_saladsFragment"
            app:destination="@id/saladsFragment" />
        <action
            android:id="@+id/action_orderFragment_to_pizzaFragment"
            app:destination="@id/pizzaFragment" />
        <action
            android:id="@+id/action_orderFragment_to_seafoodFragment"
            app:destination="@id/seafoodFragment" />
        <action
            android:id="@+id/action_orderFragment_to_wingsFragment"
            app:destination="@id/wingsFragment" />
        <action
            android:id="@+id/action_orderFragment_to_cartFragment"
            app:destination="@id/cartFragment" />
    </fragment>
    <fragment
        android:id="@+id/hamburgersFragment"
        android:name="com.example.learningandroid.fragments.HamburgersFragment"
        android:label="fragment_hamburgers"
        tools:layout="@layout/fragment_hamburgers" >
        <action
            android:id="@+id/action_hamburgersFragment_to_orderFragment"
            app:destination="@id/orderFragment" />
    </fragment>
    <fragment
        android:id="@+id/saladsFragment"
        android:name="com.example.learningandroid.fragments.SaladsFragment"
        android:label="SaladsFragment" >
        <action
            android:id="@+id/action_saladsFragment_to_orderFragment"
            app:destination="@id/orderFragment" />
    </fragment>
    <fragment
        android:id="@+id/pizzaFragment"
        android:name="com.example.learningandroid.fragments.PizzaFragment"
        android:label="PizzaFragment" >
        <action
            android:id="@+id/action_pizzaFragment_to_orderFragment"
            app:destination="@id/orderFragment" />
    </fragment>
    <fragment
        android:id="@+id/seafoodFragment"
        android:name="com.example.learningandroid.fragments.PastaFragment"
        android:label="SeafoodFragment" >
        <action
            android:id="@+id/action_seafoodFragment_to_orderFragment"
            app:destination="@id/orderFragment" />
    </fragment>
    <fragment
        android:id="@+id/wingsFragment"
        android:name="com.example.learningandroid.fragments.WingsFragment"
        android:label="WingsFragment" >
        <action
            android:id="@+id/action_wingsFragment_to_orderFragment"
            app:destination="@id/orderFragment" />
    </fragment>
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.example.learningandroid.fragments.CartFragment"
        android:label="CartFragment" />
</navigation>